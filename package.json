{
  "name": "tenantcloud-stylelint-config",
  "version": "1.1.46",
  "description": "This standard defines TenantCloud internal requirements for code formatting and style for teams that develop SCSS and CSS code.",
  "main": "index.js",
  "files": [
    "index.js",
    "order/",
    "test"
  ],
  "keywords": [
    "TenantCloud",
    "Tenant Cloud",
    "code",
    "quality",
    "style",
    "lint",
    "linter",
    "stylelint",
    "validate",
    "code style",
    "strict",
    "check",
    "checker",
    "verify",
    "enforce",
    "hint"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kifork/tenantcloud-stylelint-config.git"
  },
  "author": "<k.kifor@tenantcloud.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kifork/tenantcloud-stylelint-config/issues"
  },
  "homepage": "https://github.com/kifork/tenantcloud-stylelint-config#readme",
  "scripts": {
    "test": "npx stylelint test/**/*.scss --config index.js",
    "fix": "npx stylelint test/**/*.scss --config index.js --fix"
  },
  "devDependencies": {
    "stylelint": "^14.2.0"
  },
  "dependencies": {
    "postcss-scss": "^4.0.2",
    "stylelint-declaration-block-no-ignored-properties": "^2.5.0",
    "stylelint-declaration-use-variable": "^1.7.3",
    "stylelint-order": "^5.0.0",
    "stylelint-scss": "^4.1.0"
  }
